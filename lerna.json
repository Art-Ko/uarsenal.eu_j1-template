{
  "version": "2022.5.0",
  "description": "Multi-package repository for J1 Template",
  "command": {
    "run": {
      "npmClient": "yarn",
      "npmClientArgs": [
        "--no-lockfile --silent"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "*.md",
        "test/**"
      ]
    }
  },
  "bootstrap": {
    "ignore": "component-*"
  },
  "packages": [
    "packages/*"
  ],
  "useNx": false,
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": false
}
