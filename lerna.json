{
  "version": "2022.2.1",
  "description": "Multi-package repository for J1 Template",
  "command": {
    "run": {
      "npmClient": "yarn",
      "npmClientArgs": [
        "--no-lockfile --silent"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "*.md",
        "test/**"
      ]
    }
  },
  "bootstrap": {
    "ignore": "component-*"
  },
  "packages": [
    "packages/*"
  ]
}
