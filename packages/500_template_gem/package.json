{
  "private": true,
  "name": "gem",
  "version": "2021.1.4",
  "description": "RubyGem sources for J1 Starter",
  "main": "j1-template.gemspec",
  "config": {
    "bundler": "gem"
  },
  "homepage": "https://jekyll.one",
  "author": {
    "name": "Juergen Adams",
    "email": "jadams@jekyll-one.com",
    "url": "https://jekyll.one"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jekyll-one-org/j1-template/issues"
  },
  "repository": "https://github.com/jekyll-one-org/j1-template/packages/500_template_gem/",
  "rubygem": {
    "gemspec": "j1-template.gemspec",
    "gemfile": "Gemfile",
    "binaries": "true"
  },
  "ruby": {
    "userize": "true"
  },
  "scripts": {
    "clean": "run-p -s clean:* && run-p -s clean-bundle:*",
    "create": "run-s template-gem",
    "setup": "run-s bundle_install:*",
    "bundle_install:info": "echo Bundle the Development Rubies ..",
    "bundle_install:gemfile": "shx cp -f ../300_template_src/_install/dev/j1-template.Gemfile ./Gemfile",
    "bundle_install:clean": "shx rm -f Gemfile.lock",
    "bundle_install:check": "cross-var cross-env BUNDLE_USERIZE=$npm_package_ruby_userize if-env BUNDLE_USERIZE=true && run-s -s bundle_install_user:* || run-s -s bundle_install_system:*",
    "bundle_install_system:info": "echo Install Development Rubies using system path ..",
    "bundle_install_system:set-path": "bundle config set --local system true",
    "bundle_install_system:do": "cross-var cross-env BUNDLE_GEMFILE=$npm_package_rubygem_gemfile bundle install",
    "bundle_install_user:set-path": "bundle config set --local path ~/.gem",
    "bundle_install_user:info": "echo Install Development Rubies using user path ..",
    "bundle_install_user:do": "cross-var cross-env BUNDLE_GEMFILE=$npm_package_rubygem_gemfile bundle install",
    "install--local": "run-s -s install-local:*",
    "install-local:info": "cross-var echo Run gem install for j1-template-$npm_package_version on local system",
    "install-local:check": "cross-var cross-env BUNDLE_USERIZE=$npm_package_ruby_userize if-env BUNDLE_USERIZE=true && run-s -s install-local_user:* || run-s -s install-local_system:*",
    "install-local_system:info": "echo Install Gem using system path ..",
    "install-local_system:do": "gem install j1-template --local --no-user-install --no-document",
    "install-local_user:info": "echo Install Gem using user path ..",
    "install-local_user:do": "cross-var gem install j1-template-$npm_package_version.gem --local --user-install --no-document",
    "install--remote": "run-s -s install-remote:*",
    "install-remote:info": "cross-var echo Run gem install for j1-template-$npm_package_version on remote (RubyGems)",
    "install-remote:do": "cross-var gem push j1-template-$npm_package_version.gem",
    "clean:gems": "shx rm -f *.gem",
    "clean:git-repo": "shx rm -rf .git",
    "clean:lock-files": "shx rm -f *.lock && shx rm -f package-lock.json",
    "clean:log-files": "shx rm -f *.log",
    "clean:asset_folder": "shx rm -rf assets",
    "clean:apps_folder": "shx rm -rf apps",
    "clean:underscore_folders": "shx rm -rf _includes && shx rm -rf _layouts && shx rm -rf _plugins && shx rm -rf _sass",
    "clean:starter-web": "shx rm -rf ./lib/starter_web",
    "clean-bundle:gemfile": "shx rm -f Gemfile.lock",
    "clean-bundle:bundle": "shx rm -rf .bundle",
    "rebuild": "run-p rebuild:*",
    "rebuild:css": "lerna --scope css run build",
    "rebuild:js": "lerna --scope js run build",
    "pretemplate-gem": "run-p -s clean:* && run-s template-gem-folders && run-s template-gem-files && run-s template-gem-templates && run-s rebuild",
    "template-gem": "run-s bundle_install:* && run-s starter-git-repo && run-s template-gem-create",
    "posttemplate-gem": "shx rm -rf **/_unused",
    "starter-git-repo": "run-s starter-git-repo:*",
    "starter-git-repo:create": "git init",
    "starter-git-repo:email": "git config user.email \"dummy@dummy.site\"",
    "starter-git-repo:user": "git config user.name \"Dummy Name\"",
    "starter-git-repo:commit": "git add . && cross-var git commit -am \"Initial version '$npm_package_version'\" > git-add.log",
    "template-gem-create": "cross-var echo \"Create Gem version: $npm_package_version\" && gem build j1-template.gemspec",
    "template-gem-folders": "run-s template-gem-folder:*",
    "template-gem-folder:starter": "shx mkdir ./lib/starter_web",
    "template-gem-folder:includes": "shx mkdir -p ./_includes/themes && shx cp -r ../300_template_src/_includes/themes ./_includes",
    "template-gem-folder:layouts": "shx cp -r ../300_template_src/_layouts ./_layouts",
    "template-gem-folder:apps": "shx cp -r ../300_template_src/apps ./apps",
    "template-gem-folder:assets-themes-core": "shx mkdir -p ./assets/themes/j1 && shx cp -r ../300_template_src/assets/themes ./assets/",
    "template-gem-folder:utilsrv": "shx mkdir ./lib/starter_web/utilsrv",
    "template-gem-folder:_includes": "shx cp -r ../300_template_src/_includes ./lib/starter_web",
    "template-gem-files": "run-s template-gem-site-files:*",
    "template-gem-site-files:data": "shx mkdir ./lib/starter_web/_data && shx cp -r ../400_template_site/_data/* ./lib/starter_web/_data/",
    "template-gem-site-files:private-config": "shx cp -f ../300_template_src/_install/site/private.yml ./lib/starter_web/_data/",
    "template-gem-site-files:plugins": "shx cp -r ../300_template_src/_plugins ./lib/starter_web/_plugins",
    "template-gem-site-files:netlify-config": "shx cp -f ../300_template_src/_install/site/config/cc.yml ./apps/public/cc",
    "template-gem-site-files:post-data": "shx cp -rf ../300_template_src/_install/site/modules/* ./lib/starter_web/_data/modules",
    "template-gem-site-files:utilities": "shx cp -rf ../300_template_src/_install/site/utilities ./lib/starter_web/_data/",
    "template-gem-site-files:assets": "shx cp -r ../300_template_src/assets ./lib/starter_web",
    "template-gem-site-files:assets-themes-core": "shx rm -rf ./lib/starter_web/assets/themes",
    "template-gem-site-files:collections": "shx cp -r ../400_template_site/collections ./lib/starter_web",
    "template-gem-site-files:pages": "shx cp -r ../400_template_site/pages ./lib/starter_web",
    "template-gem-site-files:index": "shx cp ../400_template_site/index.html ./lib/starter_web",
    "template-gem-site-files:site-base-files": "shx cp -f ../300_template_src/_install/site/base-files/* ./lib/starter_web",
    "template-gem-site-files:site-template-config": "shx cp -f ../300_template_src/_install/site/config/j1_config.yml ./lib/starter_web/_data/",
    "template-gem-site-files:site-base-gemfile": "shx mv ./lib/starter_web/production.gem ./lib/starter_web/Gemfile",
    "template-gem-site-files:netlify-test-data": "echo shx cp -r ../400_template_site/_cc_test_data/ ./lib/starter_web/",
    "template-gem-site-files:util-server": "shx cp -r ../600_template_utilsrv/_* ./lib/starter_web/utilsrv && shx cp ../600_template_utilsrv/package.json ./lib/starter_web/utilsrv && shx cp ../600_template_utilsrv/server.js ./lib/starter_web/utilsrv",
    "template-gem-permissions": "run-p -s template-gem-permission:*",
    "template-gem-permission:batch": "shx chmod a+x ./lib/starter_web/*sh",
    "template-gem-permission:j1_exe": "shx chmod a+x ./exe/j1",
    "template-gem-templates": "run-p -s template-gem-template:*",
    "template-gem-template:posts": "shx cp ../300_template_src/_install/templates/posts/0000-00-00-welcome-to-j1.adoc.erb lib/starter_web/collections/posts/public/featured/_posts",
    "template-gem-template:clean": "shx rm -f lib/starter_web/collections/posts/public/featured/_posts/*welcome-to-j1.adoc",
    "posttemplate-gem-files": "run-s posttemplate-gem-site-files:*",
    "posttemplate-gem-site-files:config": "shx rm -f lib/starter_web/_data/modules/cc.yml",
    "posttemplate-gem-site-files:private": "shx rm -f lib/starter_web/_data/private@*.yml",
    "posttemplate-gem-site-files:assets": "shx cp -r ../300_template_src/assets/error_pages ./assets && shx rm -rf ./lib/starter_web/assets/error_pages && shx cp -r ../300_template_src/assets/data ./assets && shx rm -rf ./lib/starter_web/assets/data",
    "posttemplate-gem-site-files:includes": "shx rm -rf ./lib/starter_web/_includes/themes",
    "posttemplate-gem-site-files:collections": "shx rm -rf ./lib/starter_web/collections/_* && shx rm -rf ./lib/starter_web/pages/public/bookshelf",
    "posttemplate-gem-site-files:posts": "shx rm -f ./lib/starter_web/collections/_posts/featured/*-welcome-to-j1.adoc",
    "posttemplate-gem-site-files:utilsrv": "shx rm -rf ./lib/starter_web/_includes/themes && shx rm -rf ./lib/starter_web/utilsrv/node_modules && shx rm -f ./lib/starter_web/utilsrv/yarn.lock && shx rm -f ./lib/starter_web/utilsrv/package-lock.json",
    "posttemplate-gem-site-files:about": "shx rm -rf ./lib/starter_web/pages/public/about && shx mkdir ./lib/starter_web/pages/public/about && shx cp ../300_template_src/_install/templates/pages/about_site.adoc ./lib/starter_web/pages/public/about"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3"
  }
}
