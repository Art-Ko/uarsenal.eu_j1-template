{
  "private": true,
  "name": "site",
  "version": "2021.1.8",
  "description": "Web/Content sources for J1 Starter",
  "main": "_config.yml",
  "config": {
    "bundler": "jekyll"
  },
  "homepage": "https://jekyll.one",
  "author": {
    "name": "Juergen Adams",
    "email": "jadams@jekyll-one.com",
    "url": "https://jekyll.one"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jekyll-one-org/J1 Template/issues"
  },
  "repository": "https://github.com/jekyll-one-org/J1 Template/packages/400_template_site/",
  "keywords": [
    "J1",
    "Template",
    "Starter"
  ],
  "ruby": {
    "gemfile": "Gemfile",
    "userize": "true"
  },
  "jekyll": {
    "configfile": "_config.yml",
    "metadata": ".jekyll-metadata",
    "opt_incremental": "--incremental",
    "opt_skip_initial_build": "--skip-initial-build",
    "opt_wp_jekyll_port": "41000",
    "opt_webserver": "puma",
    "opt_interface": "0.0.0.0",
    "opt_app_port": "41010",
    "opt_app_url": "http://localhost:41010/",
    "opt_watch": "--watch"
  },
  "algolia": {
    "admin_key": "your-algolia-admin-key"
  },
  "wds": {
    "common": "../200_template_js/wp4_configs/webpack.common.js",
    "develop": "../200_template_js/wp4_configs/webpack.develop.js"
  },
  "rackup": {
    "web_server": "puma"
  },
  "scripts": {
    "app": "run-p -s app:*",
    "app:rackup": "cross-env SINATRA_ACTIVESUPPORT_WARNING=false WEBSERVER=$npm_package_jekyll_opt_webserver INTERFACE=$npm_package_jekyll_opt_interface PORT=$npm_package_jekyll_opt_app_port j1 rackup",
    "_app:jekyll": "cross-var cross-env JEKYLL_ENV=$npm_package_config_mode BUNDLE_GEMFILE=$npm_package_ruby_gemfile bundle exec jekyll s -c $npm_package_jekyll_configfile $npm_package_jekyll_opt_incremental",
    "app:open": "npm run delay-3s && cross-var opn $npm_package_jekyll_opt_app_url",
    "algolia": "cross-env ALGOLIA_API_KEY=$npm_package_algolia_admin_key bundle exec jekyll algolia",
    "algolia-check": "cross-env ALGOLIA_API_KEY=$npm_package_algolia_admin_key bundle exec jekyll algolia --dry-run --verbose",
    "clean": "run-p -s clean:*",
    "clean-starter": "run-p -s clean:*",
    "clean:jekyll-conf": "shx rm -f _config* Gemfile* .jekyll-metadata",
    "clean:locks": "shx rm -f *.lock package-lock.json",
    "clean:log-folder": "shx rm -rf log",
    "clean:jekyll-site": "shx rm -rf jekyll_built.log *.old && shx rm -rf .bundle .sass-cache _site",
    "clean:jekyll-links": "shx rm -rf _includes _layouts _plugins _install apps assets",
    "clean:jekyll-folders": "shx rm -rf _logs/* _sass/* .jekyll-cache",
    "bundle": "run-s -s bundler:*",
    "bundler:info": "echo Create bundle ..",
    "bundler:clean": "shx rm -f Gemfile.lock",
    "bundler:check": "cross-var cross-env BUNDLE_USERIZE=$npm_package_ruby_userize if-env BUNDLE_USERIZE=true && run-s -s bundle_user:* || run-s -s bundle_system:*",
    "bundle_system:info": "echo Bundle Rubies using system path ..",
    "bundle_system:set-path": "bundle config set --local system true",
    "bundle_system:bundle": "cross-var cross-env BUNDLE_GEMFILE=$npm_package_ruby_gemfile bundle install",
    "bundle_user:info": "echo Bundle Rubies using user path ..",
    "bundle_user:set-path": "bundle config set --local path ~/.gem",
    "bundle_user:bundle": "bundle install",
    "build": "run-s -s jekyll_build:*",
    "postbuild": "run-s -s jekyll_post_build:*",
    "lint": "run-s -s lint:*",
    "_lint:link_es_conf": "shx rm -f _site/assets/themes/j1/adapter/js/.eslintrc.json && lnk -s .eslintrc.json _site/assets/themes/j1/adapter/js",
    "lint:cp-es-lint-conf": "shx rm -f _site/assets/themes/j1/adapter/js/.eslintrc.json && shx cp .eslintrc.json _site/assets/themes/j1/adapter/js",
    "lint:adapter_js": "eslint --color _site/assets/themes/j1/adapter/js/*.js",
    "rebuild": "run-s -s rebuild:*",
    "rebuild:clean": "bundle exec jekyll clean",
    "rebuild:jekyll": "cross-var cross-env JEKYLL_ENV=$npm_package_config_mode BUNDLE_GEMFILE=$npm_package_ruby_gemfile bundle exec jekyll b --profile -c $npm_package_jekyll_configfile $npm_package_jekyll_opt_incremental",
    "rebuild:lint": "npm run lint",
    "jekyll_files": "run-s -s jekyll_files:*",
    "jekyll_files:gemfile": "shx cp -f ../300_template_src/_install/dev/development.Gemfile ./Gemfile",
    "jekyll_files:conf": "shx cp -f ../300_template_src/_install/dev/base-files/_config.yml ./_config.yml",
    "jekyll_files:private-config": "shx cp -f ../300_template_src/_install/dev/private.default.yml  ./_data",
    "jekyll_files:eslintfile": "shx cp -f ../300_template_src/_install/dev/adapter.eslintrc.json ./.eslintrc.json",
    "jekyll_build:bundle": "cross-env BUNDLE_USERIZE=$npm_package_jekyll_userize npm run bundle",
    "jekyll_build:build": "cross-var cross-env JEKYLL_ENV=$npm_package_config_mode BUNDLE_GEMFILE=$npm_package_ruby_gemfile bundle exec jekyll b --profile -c $npm_package_jekyll_configfile $npm_package_jekyll_opt_incremental",
    "jekyll_post_build:make_sure_css_files_copied": "shx cp -rf ../100_template_css/dist/* ../400_template_site/assets/themes/j1/core/css",
    "jekyll_post_build:make_sure_js_files_copied": "shx cp -rf ../200_template_js/dist/* ../400_template_site/assets/themes/j1/core/js",
    "develop": "run-p -s develop:*",
    "develop:wds": "cd ../200_template_js && cross-var cross-env WP_JEKYLL_PORT=$npm_package_jekyll_opt_wp_jekyll_port webpack-dev-server --config $npm_package_wds_develop --env.MODE --env.WP_JEKYLL_PORT",
    "develop:jekyll": "cross-var cross-env JEKYLL_ENV=$npm_package_config_mode BUNDLE_GEMFILE=$npm_package_ruby_gemfile bundle exec jekyll s -c $npm_package_jekyll_configfile $npm_package_jekyll_opt_watch $npm_package_jekyll_opt_incremental",
    "delay-1s": "node ./node_modules/npm-delay 1000",
    "delay-2s": "node ./node_modules/npm-delay 2000",
    "delay-3s": "node ./node_modules/npm-delay 3000",
    "delay-5s": "node ./node_modules/npm-delay 5000",
    "setup-links": "cross-var if-env OS=Windows_NT && run-s -s link-default || cross-env OS=$(echo $(getos)) run-s -s switch-links",
    "switch-links": "if-env OS=darwin && run-s -s link-osx || run-s -s link-default",
    "link-default": "run-p -s link-default:*",
    "link-osx": "run-p -s link-osx:*",
    "_link-default:gemfile": "lnk -s ./Gemfile ../..",
    "link-default:apps": "lnk ../300_template_src/apps .",
    "link-default:assets": "lnk ../300_template_src/assets .",
    "link-default:includes": "lnk ../300_template_src/_includes .",
    "link-default:layouts": "lnk ../300_template_src/_layouts .",
    "link-default:plugins": "lnk ../300_template_src/_plugins .",
    "link-default:sass": "lnk ../100_template_css/scss _sass",
    "link-default:install_files": "lnk ../300_template_src/_install .",
    "link-osx:link-type": "echo use explicit symlinks for MacOS",
    "_link-osx:gemfile": "lnk -s ./Gemfile ../..",
    "link-osx:apps": "lnk -s ../300_template_src/apps .",
    "link-osx:assets": "lnk -s ../300_template_src/assets .",
    "link-osx:includes": "lnk -s ../300_template_src/_includes .",
    "link-osx:layouts": "lnk -s ../300_template_src/_layouts .",
    "link-osx:plugins": "lnk -s ../300_template_src/_plugins .",
    "link-osx:sass": "lnk -s ../100_template_css/scss ./_sass",
    "link-osx:templates": "lnk -s ../300_template_src/_install .",
    "get_version": "run-p -s get_version:*",
    "get_version:jekyll": "cross-var cross-env JEKYLL_ENV=$npm_package_config_mode BUNDLE_GEMFILE=$npm_package_ruby_gemfile bundle exec jekyll --version"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "getos": "^3.2.1",
    "getos-cli": "^1.0.0",
    "if-env": "^1.0.4",
    "j1-cli": "^2019.0.3",
    "lnk-cli": "^1.0.1",
    "npm-delay": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "opn-cli": "^3.1.0",
    "shelljs": "^0.8.3",
    "shx": "^0.2.2"
  },
  "devDependencies": {
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "4.1.4"
  }
}
